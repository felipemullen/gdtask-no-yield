    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch from main scene",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "/Applications/Godot_mono.app/Contents/MacOS/Godot",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "args": [
                "--path",
                "${workspaceRoot}",
                "--headless" // temp
            ]
        }
    ],
    "inputs": [
    ]
}